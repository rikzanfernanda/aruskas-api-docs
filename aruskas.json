{
  "openapi": "3.0.3",
  "info": {
    "title": "Aruskas API Documentation",
    "description": "Documentation for Aruskas",
    "version": "1.0.0",
    "contact": {
      "name": "Rikzan Fernanda",
      "email": "fernandarikzan@gmail.com",
      "url": "https://rikzanfernanda.netlify.app"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Development server"
    },
    {
      "url": "https://aruskas.savingid.my.id",
      "description": "Production server"
    }
  ],
  "paths": {
    "/api/register": {
      "post": {
        "summary": "Register user",
        "tags": ["Authentication"],
        "responses": {
          "200": {
            "description": "Response success from register",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DefaultResponseSchema"
                },
                "examples": {
                  "Bambang": {
                    "$ref": "#/components/examples/UserResponseExample"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "summary": "Login user",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "Bambang": {
                  "description": "Example request",
                  "value": {
                    "email": "bambang@gmail.com",
                    "password": "bambang"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Response after login",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DefaultResponseSchema"
                },
                "examples": {
                  "Bambang": {
                    "value": {
                      "timestamp": "2022-05-31 23:12:00",
                      "result": [],
                      "status": 200,
                      "message": "Login successfully!",
                      "token": "hfbgbjskjfg...(JWT token)",
                      "token_type": "bearer",
                      "id": 1,
                      "nama": "Bambang",
                      "email": "bambang@gmail.com"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DefaultResponseSchema": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "status": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          },
          "result": {
            "type": "object"
          }
        }
      }
    },
    "examples": {
      "UserResponseExample": {
        "description": "User response example",
        "value": {
          "timestamp": "2022-05-31 23:12:00",
          "status": 200,
          "message": "Data saved successfully!",
          "result": {
            "id": 1,
            "nama": "Bambang",
            "email": "bambang@gmail.com",
            "pekerjaan": "Wiraswasta",
            "alamat": "Pemalang, Jawa Tengah"
          }
        }
      }
    }
  }
}
